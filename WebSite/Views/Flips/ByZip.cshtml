@model HouseFlipper.DataAccess.Models.Zips

@{
    ViewBag.Title = "Flips: Zipcode";
}

<h3>Flips: Zipcode</h3>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Zipcode","ByZip", new { sortOrder = "Zipcode"})</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Subdiv", "ByZip", new { sortOrder = "SubdivisionCount" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Flips", "ByZip", new { sortOrder = "Count" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Active", "ByZip", new { sortOrder = "ActiveCount" })</p>
            </th>
            
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Beds", "ByZip", new { sortOrder = "AverageBedsValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Full", "ByZip", new { sortOrder = "AverageFullBathsValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Half", "ByZip", new { sortOrder = "AverageHalfBathsValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Year", "ByZip", new { sortOrder = "AverageYearBuilt" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">Pool</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Purchase", "ByZip", new { sortOrder = "AveragePurchaseValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Sold", "ByZip", new { sortOrder = "AverageSoldPriceValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Profit", "ByZip", new { sortOrder = "AverageProfitValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("SqFt", "ByZip", new { sortOrder = "AverageSqFtHeatedValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Purchase/SqFt", "ByZip", new { sortOrder = "AveragePPSqFtValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("Sold/SqFt", "ByZip", new { sortOrder = "AverageSPSqFTValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("ROI", "ByZip", new { sortOrder = "AverageROIValue" })</p>
            </th>
            <th align="center">
                <p style="text-align: center">@Html.ActionLink("ADOM", "ByZip", new { sortOrder = "AverageADOMValue" })</p>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.Zipcode)
                </td>
                <td align="center">
                    <p>@Html.ActionLink(@Html.DisplayFor(modelItem => item.SubdivisionCount).ToString(), "Subdivision", new { id = item.Zipcode })</p>
                </td>                
                <td align="center">
                    <p>@Html.ActionLink(@Html.DisplayFor(modelItem => item.Count).ToString(), "FlippedHomes", new { id = item.Zipcode })</p>
                </td>
                <td align="center">
                    <p>@Html.ActionLink(@Html.DisplayFor(modelItem => item.ActiveCount).ToString(), "Homes", new { id = item.Zipcode, filter = "active" })</p>
                </td>
                <td align="center">
                    @*@Html.DisplayFor(modelItem => item.AverageBought.Beds)/@Html.DisplayFor(modelItem => item.AverageSold.Beds)*@
                    @Html.DisplayFor(modelItem => item.AverageBeds)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageFullBaths)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageHalfBaths)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageYearBuilt)
                </td>
                <td align="center">
                    @*@Html.DisplayFor(modelItem => item.Pool)*@
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AveragePurchase)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageSoldPrice)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageProfit)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageSqFtHeated)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AveragePPSqFt)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageSPSqFT)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageROI)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AverageADOM)
                </td>
            </tr>
        }

    </table>
}
