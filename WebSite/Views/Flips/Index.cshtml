@model IEnumerable<HouseFlipper.DataAccess.Models.FlippedHouse>

@{
    ViewBag.Title = "Flips: All";
}

<h2>Flips: All</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoldDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchasePrice)
        </th>                
        <th>
            @Html.DisplayNameFor(model => model.SoldPrice)
        </th>                
        <th>
            ROIP
        </th>
        <th>
            ROIS
        </th>
        <th>
            SqFt
        </th>
        <th>
            LP/SqFt
        </th>
        <th>
            SP/SqFt
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoldDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchasePrice)
        </td>                        
        <td>
            @Html.DisplayFor(modelItem => item.SoldPrice)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.RoiPurchase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoiSold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SqFtHeated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LPSqFt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SPSqFt)
        </td>
        <td style="white-space:nowrap">
            @Html.ActionLink("BasedOn", "History", new { address = item.Address, city = item.City, zip = item.PostalCode })
        </td>
    </tr>
}

</table>
